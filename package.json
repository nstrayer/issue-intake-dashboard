{
	"name": "issue-intake-dashboard",
	"version": "1.1.0",
	"description": "Visual dashboard for GitHub issue intake rotation, powered by Claude Code SDK",
	"type": "module",
	"bin": {
		"issue-intake-dashboard": "./bin/cli.js"
	},
	"files": [
		"bin",
		"dist",
		"server",
		"src",
		"scripts",
		"index.html",
		"vite.config.ts",
		"tailwind.config.js",
		"postcss.config.js",
		"tsconfig.json",
		"tsconfig.server.json"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/nstrayer/issue-intake-dashboard.git"
	},
	"keywords": [
		"github",
		"issues",
		"dashboard",
		"claude",
		"positron"
	],
	"author": "Nick Strayer",
	"license": "MIT",
	"scripts": {
		"dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
		"dev:frontend": "vite",
		"dev:backend": "tsx watch server/index.ts",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node --import tsx server/index.ts",
		"prepublishOnly": "npm run build",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@anthropic-ai/claude-code": "^1.0.3",
		"@aws-sdk/client-sts": "^3.600.0",
		"@aws-sdk/credential-providers": "^3.600.0",
		"express": "^4.21.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-markdown": "^9.0.1",
		"recharts": "^2.15.0",
		"rehype-raw": "^7.0.0",
		"remark-gfm": "^4.0.1",
		"tsx": "^4.19.2",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.19",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@types/express": "^5.0.0",
		"@types/node": "^22.10.7",
		"@types/react": "^18.3.18",
		"@types/react-dom": "^18.3.5",
		"@types/ws": "^8.5.14",
		"@vitejs/plugin-react": "^4.3.4",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.1.2",
		"jsdom": "^27.4.0",
		"postcss": "^8.4.49",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.3",
		"vite": "^6.0.7",
		"vitest": "^4.0.18"
	}
}
